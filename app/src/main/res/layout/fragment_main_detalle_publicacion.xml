<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F6F8FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con Imagen -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <ImageView
                android:id="@+id/imgDetallePortada"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />

            <!-- Botón Atrás Flotante -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAtras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/ic_launcher_foreground"
                app:backgroundTint="@android:color/white"
                android:contentDescription="Atrás"
                android:layout_gravity="top|start"/>

            <!-- Etiqueta de Precio -->
            <TextView
                android:id="@+id/tvDetallePrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 500.00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#2E70FF"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/bg_chip"
            android:layout_marginTop="-20dp"> <!-- Efecto de tarjeta solapada -->

            <!-- Título y Autor -->
            <TextView
                android:id="@+id/tvDetalleTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título del Curso"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#20232A" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvDetalleAutor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Por: Profe Amaury"
                    android:textSize="16sp"
                    android:textColor="#7A7A7A" />

                <TextView
                    android:id="@+id/tvDetalleCalif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8 ★"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFC107" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="20dp" />

            <!-- Descripción -->
            <TextView
                android:text="Acerca de este curso"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#20232A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDetalleDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aquí va la descripción detallada..."
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp"
                android:textColor="#4A4A4A" />

            <!-- Información Adicional (Dinámica) -->
            <TextView
                android:id="@+id/tvLabelExtra"
                android:text="Requisitos / Archivo"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#20232A"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDetalleExtra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:layout_marginTop="8dp"
                android:textColor="#4A4A4A"
                android:background="#F0F2F5"
                android:padding="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="20dp" />

            <!-- ÁREA DE ACCIONES -->

            <!-- 1. Panel del DUEÑO -->
            <LinearLayout
                android:id="@+id/panelDueno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:text="Panel de Administración"
                    android:textStyle="bold"
                    android:textColor="#2E70FF"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditarCurso"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Editar contenido"
                    app:icon="@drawable/ic_launcher_foreground"
                    app:backgroundTint="#FFA000"
                    app:cornerRadius="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerAlumnos"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Ver alumnos inscritos"
                    android:layout_marginTop="8dp"/>

                <!-- BOTÓN ELIMINAR (¡AGREGADO!) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEliminar"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Eliminar publicación"
                    android:textColor="#D32F2F"
                    app:strokeColor="#D32F2F"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- 2. Panel del CLIENTE (Antes de comprar) -->
            <LinearLayout
                android:id="@+id/panelClienteCompra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAccionPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Comprar ahora - $500"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    app:backgroundTint="#2E70FF"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContactarProfe"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hacer una pregunta"
                    android:textColor="#2E70FF"/>
            </LinearLayout>

            <!-- 3. Panel del ALUMNO (Ya comprado) -->
            <LinearLayout
                android:id="@+id/panelAlumnoAcceso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:text="¡Ya tienes este curso!"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerContenido"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Acceder al contenido"
                    app:icon="@drawable/ic_launcher_foreground"
                    app:cornerRadius="16dp"
                    app:backgroundTint="#4CAF50"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDejarOpinion"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calificar curso"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>