<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvHistorialTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TÃ­tulo del Curso"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#20232A" />

            <TextView
                android:id="@+id/tvHistorialPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 0.00"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHistorialTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="#2E70FF"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Curso"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvHistorialFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="01/01/2026"
                android:textColor="#757575"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnCalificarHistorial"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="120dp"
                android:backgroundTint="#FF9800"
                android:paddingHorizontal="8dp"
                android:text="Calificar"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>